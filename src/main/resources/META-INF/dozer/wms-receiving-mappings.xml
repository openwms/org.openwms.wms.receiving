			<b is-accessible="true">state</b>
		</field>
		<field>
			<a is-accessible="false">positions</a>
			<b is-accessible="false">positions</b>
		</field>
		<field>
			<a is-accessible="false">details</a>
			<b is-accessible="false">details</b>
		</field>
	</mapping>

	<mapping>
		<class-a>org.openwms.wms.receiving.impl.ReceivingOrderPosition</class-a>
		<class-b>org.openwms.wms.receiving.api.events.ReceivingOrderPositionMO</class-b>
		<field>
			<a is-accessible="true">posNo</a>
			<b is-accessible="true">positionId</b>
		</field>
		<field type="one-way">
			<a is-accessible="true">state</a>
			<b is-accessible="true">state</b>
		</field>
		<field type="one-way">
			<a is-accessible="true">details</a>
			<b is-accessible="true">details</b>
		</field>
		<field custom-converter="org.openwms.core.units.converter.MeasurableConverter">
			<a is-accessible="true">quantityExpected</a>
			<b is-accessible="true">quantityExpected</b>
		</field>
		<field custom-converter="org.openwms.core.units.converter.MeasurableConverter">
			<a is-accessible="true">quantityReceived</a>
			<b is-accessible="true">quantityReceived</b>
		</field>
		<field type="one-way">
			<a is-accessible="true">product</a>
			<b is-accessible="true">product</b>
		</field>
	</mapping>

	<mapping>
		<class-a>org.openwms.wms.receiving.impl.ReceivingTransportUnitOrderPosition</class-a>
		<class-b>org.openwms.wms.receiving.api.events.ReceivingOrderPositionMO</class-b>
		<field>
			<a is-accessible="true">posNo</a>
			<b is-accessible="true">positionId</b>
		</field>
		<field type="one-way">
			<a is-accessible="true">state</a>
